@model IEnumerable<yyytours.Models.FacebookPost>

@{
    ViewData["Title"] = "דף הבית";
}

<div class="text-center">
    <span class="main-title">ברוכים הבאים ל YYYTours</span>
</div>

<div>
    <h4>המדריכים שלנו</h4>

    <div class="row">
        <div class="col-md-4">
            <p>הכנות לשביל ישראל</p>
            <video controls> <source src="~/guideVideos/IsraelRoadPreperations.mp4" type="video/mp4"> </video>
        </div>

        <div class="col-md-4">
            <p>ציוד בסיסי לשטח</p>
            <video controls> <source src="~/guideVideos/TravelEquipment.mp4" type="video/mp4"> </video>
        </div>

        <div class="col-md-4">
            <p>הדלקת אש עם אבן אש</p>
            <video controls> <source src="~/guideVideos/UsingFireStone.mp4" type="video/mp4"> </video>
        </div>
    </div>
</div>


<div>
    <h4>תוכן הפייסבוק שלנו</h4>
    <div style="height: 250px; overflow: auto;" dir="rtl">
        @foreach (var item in Model)
        {
            <div class="card facebook-post">
                @Html.Raw(item.message.Replace("\n", "<br />"))
            </div>
        }
    </div>
</div>

