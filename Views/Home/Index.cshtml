@model yyytours.Models.HomeViewModel

@{
    ViewData["Title"] = "דף הבית";
}

<div class="text-center">
    <span class="main-title">ברוכים הבאים ל YYYTours</span>
</div>

<div>
    <h4>המדריכים שלנו</h4>

    <div class="row">
        <div class="col-md-4">
            <p>הכנות לשביל ישראל</p>
            <video controls> <source src="~/guideVideos/IsraelRoadPreperations.mp4" type="video/mp4"> </video>
        </div>

        <div class="col-md-4">
            <p>ציוד בסיסי לשטח</p>
            <video controls> <source src="~/guideVideos/TravelEquipment.mp4" type="video/mp4"> </video>
        </div>

        <div class="col-md-4">
            <p>הדלקת אש עם אבן אש</p>
            <video controls> <source src="~/guideVideos/UsingFireStone.mp4" type="video/mp4"> </video>
        </div>
    </div>
</div>


<section>
    <h4>תוכן הפייסבוק שלנו</h4>
    <div style="height: 250px; overflow: auto;" dir="rtl">
        @foreach (var item in Model.FacebookPosts)
        {
            <div class="card facebook-post">
                @Html.Raw(item.message.Replace("\n", "<br />"))
            </div>
        }
    </div>
<section />

<section>
    <h4>המקומות המומלצים</h4>
    <div style="height: 250px; overflow: auto;" dir="rtl">
        @foreach (var item in Model.RecomendedPlaces)
        {
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Catalog", "Trip")?searchString=@item.Item1.Name'" >
                @item.Item1.Name <span class="badge badge-light">@item.Item2</span>
                </button>
        }
    </div>
<section />

