@model User
@{
    ViewData["Title"] = "יצירת חשבון";
}
<h1 dir="rtl">@ViewData["Title"]</h1>

@using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class=" row small-top">
        <div class="col-md-3">
            @Html.LabelFor(model => model.FullName, "שם מלא")
        </div>
        <div class="col-md-9">
            @Html.TextBoxFor(model => model.FullName, new { @class = "form-control" })
        </div>
    </div>


    <div class=" row small-top">
        <div class="col-md-3">
            @Html.LabelFor(model => model.Email, "מייל")
        </div>
        <div class="col-md-9">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        </div>
    </div>


    <div class=" row small-top">
        <div class="col-md-3">
            @Html.LabelFor(model => model.Phone, "מספר טלפון")
        </div>
        <div class="col-md-9">
            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
        </div>
    </div>

    <div class=" row small-top">
        <div class="col-md-3">
            @Html.LabelFor(model => model.Password, "סיסמה")
        </div>
        <div class="col-md-9">
            @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
        </div>
    </div>

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <input type="submit" value="הרשמה" class="btn btn-default" />
}