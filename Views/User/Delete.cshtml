@model yyytours.Models.User

@{
    ViewData["Title"] = "מחיקת חשבון";
    Layout = "../Shared/_Layout.cshtml";
}

<h1>מחיקת חשבון</h1>

<p>האם אתה בטוח שברצונך למחוק את @Html.DisplayFor(model => model.FullName)?</p>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GetUserTypeDescription)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Email" />
        <input type="submit" value="מחיקה" class="btn btn-danger" />
        <br />
        <a asp-action="Index">חזרה לרשימת משתמשים</a>
        <br />
        <span class="text-danger">@Html.ValidationMessage("userSignToTours")</span>
        <span class="text-danger">@Html.ValidationMessage("userGuideTours")</span>
    </form>
</div>
