@model yyytours.Models.User

@{
    ViewData["Title"] = "יצירת חשבון";
    Layout = "../Shared/_Layout.cshtml";
}

<h1>יצירת חשבון</h1>

<aside class="tech-help">
    לעזרה טכנית חייגו: 0546300288
</aside>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">מייל</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <span class="text-danger">@Html.ValidationMessage("UserExistsError")</span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label">שם מלא</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label">מספר טלפון</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">סיסמה</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="צור חשבון" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Login">כבר יש לך חשבון? כניסה לחשבון</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
