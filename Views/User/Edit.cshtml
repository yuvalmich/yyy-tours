@model yyytours.Models.User

@{
    ViewData["Title"] = "עריכת חשבון";
    Layout = "../Shared/_Layout.cshtml";
}

<h1>עריכת חשבון</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input disabled asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="ViewBag.Type" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
                <span class="text-danger">@Html.ValidationMessage("UserTypeError")</span>
            </div>
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <input type="submit" value="שמירה" class="btn btn-primary" />
                <br />
                <a asp-action="Index">חזרה לרשימת משתמשים</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
