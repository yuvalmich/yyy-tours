
@model User
@{
    ViewData["Title"] = "התחברות";
}

@section Styles {
    <link href="@Url.Content("~/css/form.css")" rel="stylesheet" type="text/css" />
}

<h1 dir="rtl">@ViewData["Title"]</h1>

@using (Html.BeginForm("Login", "User", FormMethod.Post))
{
    <div class="form-row row small-top">
        <div class="col-md-3">
            @Html.LabelFor(model => model.Email, "מייל")
        </div>
        <div class="col-md-9">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        </div>
    </div>


    <div class="form-row row small-top">
        <div class="col-md-3">
            @Html.LabelFor(model => model.Password, "סיסמה")
        </div>
        <div class="col-md-9">
            @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
        </div>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger" role="alert">
            @Html.ValidationMessage("LoginError")
        </div>
    }

    <input type="submit" value="כניסה" class="btn btn-primary" />
    }