@model IEnumerable<yyytours.Models.Place>

@{
    ViewData["Title"] = "מקומות";
    Layout = "../Shared/_Layout.cshtml";
}

<h1>מקומות</h1>

<p>
    <a asp-action="Create">יצירת מיקום חדש</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-row">
        <div class="col-md-7">
             <input type="text" placeholder="חיפוש לפי שם מקום" autocomplete="off" value="@ViewContext.HttpContext.Request.Query["SearchString"]" name="SearchString" class="form-control" value="@ViewData["CurrentFilter"]" />
             </div>
             <div  class="col-md-3">
            <input type="submit" value="חיפוש" class="btn btn-primary" /> |
            <a asp-action="Catalog">חזרה לרשימה מלאה</a>
             </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                תמונה
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img style="width: 200px;" src="@item.ImageUrl" alt="">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                <a asp-action="edit" asp-route-id="@item.ID">עריכה</a> |
                <a asp-action="delete" asp-route-id="@item.ID">מחיקה</a>
            </td>
        </tr>
}
    </tbody>
</table>
